<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="420.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.formalspeech.client.fx.windows.mainWindow.MainWindowController">
   <children>
      <VBox prefHeight="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <ListView fx:id="lvMain" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
            <Pane prefHeight="40.0" prefWidth="200.0">
               <children>
                  <HBox alignment="CENTER_RIGHT" prefWidth="420.0" spacing="5.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#onDisconnectClicked" text="Disconnect" />
                        <Button mnemonicParsing="false" onAction="#onSendFormClicked" text="Send form" />
                        <Button fx:id="btnEdit" mnemonicParsing="false" onAction="#onFillFormClicked" text="Fill form" />
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </HBox>
               </children>
            </Pane>
         </children>
      </VBox>
   </children>
</AnchorPane>
